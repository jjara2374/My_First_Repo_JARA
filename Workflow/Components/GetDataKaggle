import kaggle
from airflow import DAG
from airflow.operators.python_operator import PythonOperator
from datetime import datetime

def get_data_kaggle():
   kaggle.api.authenticate()
    
   kaggle.api.dataset_download_files('nombre_del_dataset', path='/path_local', unzip=True)

# Definir el DAG de Airflow
dag = DAG('GetDataKaggle', description='Download data from Kaggle',
          schedule_interval='@once', start_date=datetime(2024, 10, 13))

get_data_task = PythonOperator(
    task_id='get_data',
    python_callable=get_data_kaggle,
    dag=dag
)

